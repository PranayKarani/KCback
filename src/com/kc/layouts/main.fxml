<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kc.Controllers.MainController">
   <center>
      <TabPane prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Send Notice">
               <content>
                  <VBox prefWidth="100.0" spacing="5.0">
                     <children>
                        <HBox prefWidth="200.0" spacing="5.0">
                           <children>
                              <Label text="To">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <ChoiceBox fx:id="to_choice">
                              </ChoiceBox>
                           </children>
                        </HBox>
                        <TextField fx:id="from_text" promptText="From" />
                        <TextField fx:id="header_text" promptText="Header" />
                        <TextArea fx:id="notice_text" prefWidth="200.0" promptText="Notice body" />
                        <Button fx:id="sendNotice_button" defaultButton="true" mnemonicParsing="false" onAction="#onSendNoticeClick" text="Send" />
                        <Button mnemonicParsing="false" onAction="#viewNoticeHistory" text="Notification History" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
          </Tab>
          <Tab text="Attendance">
               <content>
                  <GridPane vgap="5.0">
                    <columnConstraints>
                      <ColumnConstraints fillWidth="false" minWidth="10.0" percentWidth="20.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
                      <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Select Semester" />
                        <Label text="Select Subject" GridPane.rowIndex="1" />
                        <ChoiceBox fx:id="as_sem_choice" GridPane.columnIndex="1" />
                        <ChoiceBox fx:id="as_sub_choice" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#onGetSheetClick" text="Get Attendance Sheet" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                        <Label text="Select Date" GridPane.rowIndex="2" />
                        <DatePicker fx:id="as_datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content></Tab>
            <Tab text="Time Table">
               <content>
                  <GridPane vgap="5.0">
                     <columnConstraints>
                        <ColumnConstraints fillWidth="false" minWidth="10.0" percentWidth="20.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
                        <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Select Semester" />
                        <Label text="Select Subject" GridPane.rowIndex="1" />
                        <ChoiceBox fx:id="tt_sem_choice" GridPane.columnIndex="1" />
                        <ChoiceBox fx:id="tt_sub_choice" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#onTTSubmit" text="submit" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                        <Label text="Select Day" GridPane.rowIndex="2" />
                        <ChoiceBox fx:id="tt_day_choice" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Start time" GridPane.rowIndex="4" />
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                           <children>
                              <TextField fx:id="tt_start_hour" maxWidth="-Infinity" prefWidth="30.0" promptText="h" />
                              <Label text=":">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tt_start_min" maxWidth="-Infinity" prefWidth="30.0" promptText="m" />
                              <ChoiceBox fx:id="tt_start_ampm_choice" prefWidth="50.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="136.0" layoutY="115.0" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                           <children>
                              <TextField fx:id="tt_end_hour" maxWidth="-Infinity" prefWidth="30.0" promptText="h" />
                              <Label text=":">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tt_end_min" maxWidth="-Infinity" prefWidth="30.0" promptText="m" />
                              <ChoiceBox fx:id="tt_end_ampm_choice" prefWidth="50.0" />
                           </children>
                        </HBox>
                        <Label text="End time" GridPane.rowIndex="5" />
                        <Label text="Teacher" GridPane.rowIndex="3" />
                        <TextField fx:id="tt_teacher" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content></Tab>
            <Tab text="SQL query launcher">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <TextArea fx:id="sql_query_text" prefHeight="200.0" prefWidth="200.0" promptText="Only SELECT, INSERT, UPDATE and DELETE supported">
                           <font>
                              <Font name="Consolas" size="16.0" />
                           </font></TextArea>
                        <HBox spacing="5.0">
                           <children>
                              <Label text="Rows to be shown:" />
                              <ChoiceBox fx:id="resultRows_choice" />
                           </children>
                        </HBox>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#onQueryExecute" text="Execute" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <FlowPane fx:id="statusbar" prefWidth="200.0" style="-fx-background-color: #e8e8e8;">
         <children>
            <Label fx:id="statusbar_text" text="Status bar" />
         </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </FlowPane>
   </bottom>
</BorderPane>
